<!DOCTYPE html>
<%@page language="PL/SQL"%>
<%@plsql procedure="PAGE_PUBLICATION_CURSOR"%>
<%@plsql parameter="RESUMATOR_ID_VAL" DEFAULT="NULL"%>

<%!CURSOR PUB_CURSOR IS

SELECT RESEARCH_PUB.TITLE, RESEARCH_PUB.TYPE, RESEARCH_PUB.LOCATION, RESEARCH_PUB.DATE_PRESENTED, RESEARCH_PUB.DISPLAY_RANK
FROM RESEARCH_PUB
WHERE RESEARCH_PUB.RESUMATOR_ID = RESUMATOR_ID_VAL
ORDER BY DISPLAY_RANK; 

PUB_ROW PUB_CURSOR%ROWTYPE;
%>

<%OPEN PUB_CURSOR;
LOOP
FETCH PUB_CURSOR INTO PUB_ROW;
EXIT WHEN PUB_CURSOR%NOTFOUND;%>
              <ul>
                 <li><%=PUB_ROW.TITLE%>, <%=PUB_ROW.TYPE%>, <%=PUB_ROW.LOCATION%></li>
              </ul>
<%END LOOP;
CLOSE PUB_CURSOR;%>

<!-- ADD RESEARCH MODAL -->

  <div id="add-research-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
      <h3 id="myModalLabel">Add Research Information</h3>
    </div>
    <div class="modal-body">
      <form action="http://oracle.is.umbc.edu:8080/classpsp/IS420_TEAM_TRG.FORM_ADD_RESEARCH_PUB" method="get">
          <div class="form-inline margin-form-inline">
            <input class="span3" type="hidden" NAME="RESUMATOR_ID_IN" VALUE="<%=RESUMATOR_ID_VAL%>">
            <input class="span3" type="text" name="RESEARCH_TITLE" placeholder="Title of Research">
            <input class="span2" type="text" name="RESEARCH_TYPE" placeholder="Type of Research">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span3" type="text" name="RESEARCH_LOCATION" placeholder="Location">
            <input class="span2" type="text" name="RESEARCH_DATE_PRESENTED" placeholder="date Presented">
          </div>      
          <div class="form-inline margin-form-inline">
           <input class="span2" type="text" NAME="DISPLAY_RANK_IN"placeholder="Display Rank">
          </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <button class="btn btn-primary" type="submit">Save changes</button>
    </div>
    </form>
  </div>

