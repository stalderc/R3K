            <input class="span3" type="text" placeholder="ExtraCurricular Title">
            <input class="span2" type="text" placeholder="Year Participated">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span2" type="text" placeholder="Semester Received">
            <input class="span2" type="text" placeholder="Organization">
