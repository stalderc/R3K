<!DOCTYPE html>
<%@page language="PL/SQL"%>
<%@plsql procedure="PAGE_USERS_CURSOR"%>
<%@plsql parameter="RESUMATOR_ID_VAL" DEFAULT="NULL"%>
<%@plsql parameter="EMAIL_IN" DEFAULT="NULL"%>

<%!CURSOR USERS_CURSOR IS 

SELECT USERS.F_NAME, USERS.L_NAME, USERS.STREET, USERS.CITY, USERS.STATE, USERS.ZIPCODE, USERS.PHONE_NUMBER, USERS.ACCOUNT_TYPE
FROM USERS
WHERE USERS.RESUMATOR_ID = RESUMATOR_ID_VAL;

USERS_ROW USERS_CURSOR%ROWTYPE;%>

          <!-- user first & last name - career title they assign themselves -->
<%OPEN USERS_CURSOR;
FETCH USERS_CURSOR INTO USERS_ROW;
IF USERS_CURSOR%NOTFOUND THEN%>

          <!-- First Name Last Name - Career Title -->
          Add Your Personal Information </h4>
          <!-- House Number Street Name Street Type -->
          <p class="address"><br />
          <!-- City, State, Zipcode -->  
            <br />
<%ELSE%>   
          <!-- First Name Last Name - Career Title -->
          <%=USERS_ROW.F_NAME%> <%=USERS_ROW.L_NAME%><a href="#contact-modal" </h4>
          <!-- House Number Street Name Street Type -->
          <p class="address"><%=USERS_ROW.STREET%><br />
          <!-- City, State, Zipcode -->  
            <%=USERS_ROW.CITY%>, <%=USERS_ROW.STATE%> <%=USERS_ROW.ZIPCODE%><br />
          <!-- href="mailto:emailaddress@domain.com" -->
          <!-- Insert First Name Last Name as linkable text -->
          <a href="mailto:<%=EMAIL_IN%>"><i class="icon-envelope"></i><%=USERS_ROW.F_NAME%> <%=USERS_ROW.L_NAME%></a></p>
<%
END IF;
CLOSE USERS_CURSOR;%>

<!-- CONTACT INFORMATION MODAL -->

  <div id="contact-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
      <h3 id="myModalLabel">Contact Information</h3>
    </div>
    <div class="modal-body">
      <form>
        <fieldset>

          <p>Fill out only what needs to be changed.</p>

          <div class="form-inline margin-form-inline">
            <input class="span2" type="text" placeholder="First Name">
            <input class="span2" type="text" placeholder="Middle Name">
            <input class="span2" type="text" placeholder="Last Name">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span4" type="text" placeholder="Career Title (ex. 'Business Analyst')">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span3" type="text" placeholder="Street Address">
            <input class="span2" type="text" placeholder="City">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span2" type="text" placeholder="State">
            <input class="span2" type="text" placeholder="Zipcode">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span3" type="text" placeholder="Email Address">
          </div>

        </fieldset>
      </form>
    </div><!-- close modal-body -->
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <button class="btn btn-primary" type="submit">Save changes</button>
    </div>
  </div>
