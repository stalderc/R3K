      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
      <h3 id="myModalLabel">Add Honors and Awards Information</h3>
    </div>
    <div class="modal-body">
      <form action="http://oracle.is.umbc.edu:8080/classpsp/IS420_TEAM_TRG.FORM_AWARD" method="get">
          <div class="form-inline margin-form-inline">
            <input class="span3" type="text" placeholder="Honor or Award Name">
            <input class="span2" type="text" placeholder="Year Received">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span2" type="text" placeholder="Semester Received">
          </div>
      </form>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <button class="btn btn-primary">Save changes</button>
    </div>
  </div>


