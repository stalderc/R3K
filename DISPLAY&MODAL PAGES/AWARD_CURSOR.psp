          <div class="form-inline margin-form-inline">
            <input class="span3" type="hidden" id="RESUMATOR_ID_IN" name="RESUMATOR_ID_IN_IN" value="<%=RESUMATOR_ID_VAL%>">
            <input class="span3" type="text" id="AWARD_NAME_IN"  name="AWARD_NAME_IN_IN" placeholder="Honor or Award Name">
            <input class="span2" type="text" id="YEAR_RECEIVED_IN" name="YEAR_RECEIVED_IN_IN" placeholder="Year Received">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span2" type="text" id="SEMESTER_RECEIVED_IN" name="SEMESTER_RECEIVED_IN_IN" placeholder="Semester Received">
          </div>
          <div class="form-inline margin-form-inline">
           <input class="span2" type="text" id="DISPLAY_RANK_IN" name="DISPLAY_RANK_IN_IN"placeholder="Display Rank">
