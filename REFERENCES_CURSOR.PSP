<!DOCTYPE HTML>
<%@page language="PL/SQL"%>
<%@plsql procedure="PAGE_REFERENCES_CURSOR"%>
<%@plsql parameter="RESUMATOR_ID_VAL" DEFAULT="NULL"%>

<%!CURSOR REF_CURSOR IS

SELECT REFERENCES.REFERENCE_ID, REFERENCES.F_NAME, REFERENCES.L_NAME, REFERENCES.PHONE_NUMBER, REFERENCES.ADDRESS, REFERENCES.EMAIL, REFERENCES.COMPANY, REFERENCES.TITLE, REFERENCES.DISPLAY_RANK
FROM REFERENCES
WHERE REFERENCES.RESUMATOR_ID = RESUMATOR_ID_VAL
ORDER BY DISPLAY_RANK;

SCRIPT_COUNTER INTEGER := 0;
REF_ROW REF_CURSOR%ROWTYPE;
%>

<%OPEN REF_CURSOR;
LOOP
FETCH REF_CURSOR INTO REF_ROW;
EXIT WHEN REF_CURSOR%NOTFOUND;%>
              <!-- loop through all listed projects -->
               <p>
                 <input id="F_NAME_<%=REFERENCES.REFERENCE_ID%>" type="hidden" value="<%=REF_ROW.F_NAME%>"/> <%=REF_ROW.F_NAME%> <input id="L_NAME_<%=REFERENCES.REFERENCE_ID%>" type="hidden" value="<%=REF_ROW.L_NAME%>"/><%=REF_ROW.L_NAME%><br/>
                 <input id="TITLE_<%=REFERENCES.REFERENCE_ID%>" type="hidden" value="<%=REF_ROW.TITLE%>"/><%=REF_ROW.TITLE%><br/>
                 <input id="COMAPNY_<%=REFERENCES.REFERENCE_ID%>" type="hidden" value="<%=REF_ROW.COMPANY%>"/><%=REF_ROW.COMPANY%><br/>
                 <input id="ADDRESS_<%=REFERENCES.REFERENCE_ID%>" type="hidden" value="<%=REF_ROW.ADDRESS%>"/><%=REF_ROW.ADDRESS%><br/>
                 <input id="EMAIL_<%=REFERENCES.REFERENCE_ID%>" type="hidden" value="<%=REF_ROW.EMAIL%>"/><%=REF_ROW.EMAIL%><br/>
                 <input id="DISPLAY_RANK_ID_<%=REFERENCES.REFERENCE_ID%>" type="hidden" value="<%=REF_ROW.PHONE_NUMBER%>"/> <%=REF_ROW.PHONE_NUMBER%><br/>
                 <input id="DISPLAY_RANK_ID_<%=REFERENCES.REFERENCE_ID%>" type="hidden" value="<%=REF_ROW.DISPLAY_RANK%>"/>
              </p>
<%
SCRIPT_COUNTER := SCRIPT_COUNTER + 1;
END LOOP;
CLOSE REF_CURSOR;%>

  <!-- ADD EDUCATION MODAL -->

  <div id="add-references-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
      <h3 id="myModalLabel">Add References Information</h3>
    </div>
    <div class="modal-body">
      <form action="http://oracle.is.umbc.edu:8080/classpsp/IS420_TEAM_TRG.FORM_ADD_REFERENCES" method="get">
          <div class="form-inline margin-form-inline">
            <input class="span3" type="hidden" NAME="RESUMATOR_ID_IN" VALUE="<%=RESUMATOR_ID_VAL%>">
            <input class="span3" type="text" NAME="F_NAME_IN"placeholder="First name">
            <input class="span2" type="text" NAME="L_NAME_IN"placeholder="Last Name">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span2" type="text" NAME="PHONE_NUMBER_IN"placeholder="Phone Number">
            
          </div>

          <textarea class="max-width" rows="3"NAME="ADDRESS_IN" placeholder="Address."></textarea>

          <div class="form-inline margin-form-inline">
            <input class="span2" type="text" NAME="EMAIL_IN1"placeholder="Email Address">
            <input class="span2" type="text" NAME="COMPANY_IN"placeholder="Company name">
            <input class="span2" type="text" NAME="TITLE_IN"placeholder="Title">
            <input class="span2" type="text" NAME="DISPLAY_RANK_IN"placeholder="Display Rank">
          </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <button class="btn btn-primary" type="submit">Save changes</button>
    </div>
      </form>
  </div>

<!-- EDIT REFERENCES MODAL -->
<%!CURSOR REF_ID_CURSOR IS

SELECT REFERENCES.REFERENCE_ID, REFERENCES.DISPLAY_RANK
FROM REFERENCES
WHERE REFERENCES.RESUMATOR_ID = RESUMATOR_ID_VAL
ORDER BY DISPLAY_RANK;

REF_ID_ROW REF_ID_CURSOR%ROWTYPE;
%>
  <div id="edit-references-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
      <h3 id="myModalLabel">Edit References Information</h3>
    </div>
    <div class="modal-body">
      <form id="editReferences" action="http://oracle.is.umbc.edu:8080/classpsp/IS420_TEAM_TRG.FORM_REFERENCES" method="get">
          <div class="form-inline margin-form-inline">
            <select onmousemove="populateFields(<%=REF_ID_ROW.REFERENCE_ID%>)" class="span2" ID="REFERENCE_ID_IN" name="REFERENCES_ID_IN">
              <%OPEN REF_ID_CURSOR;
                LOOP
                FETCH REF_ID_CURSOR INTO REF_ID_ROW;
                EXIT WHEN REF_ID_CURSOR%NOTFOUND;%>
              <option value="<%=REF_ID_ROW.REFERENCE_ID%>"><%=REF_ID_ROW.DISPLAY_RANK%></option>
              <%END LOOP;
              CLOSE REF_ID_CURSOR;%>
          </select>
            <input class="span3" type="hidden" ID="RESUMATOR_ID_IN" NAME="RESUMATOR_ID_IN" VALUE="<%=RESUMATOR_ID_VAL%>">
            <input class="span3" type="text"   ID="F_NAME_IN" NAME="F_NAME_IN" placeholder="First name" value="">
            <input class="span2" type="text"   ID="L_NAME_IN" NAME="L_NAME_IN" placeholder="Last Name" value="">
          </div>
          <div class="form-inline margin-form-inline">
            <input class="span2" type="text"   ID="PHONE_NUMBER_IN" NAME="PHONE_NUMBER_IN" placeholder="Phone Number" value="">
            
          </div>

          <textarea class="max-width" rows="3" ID="ADDRESS_IN" NAME="ADDRESS_IN" placeholder="Address." value=""></textarea>

          <div class="form-inline margin-form-inline">
            <input class="span2" type="text" ID="EMAIL_IN" NAME="EMAIL_IN" placeholder="Email Address" value="">
            <input class="span2" type="text" ID="COMPANY_IN" NAME="COMPANY_IN" placeholder="Company name" value="">
            <input class="span2" type="text" ID="TITLE_IN" NAME="TITLE_IN" placeholder="Title" value="">
            <input class="span2" type="text" ID="DISPLAY_IN" NAME="DISPLAY_RANK_IN" placeholder="Display Rank" value="">
          </div>
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <button class="btn btn-primary" type="submit">Save changes</button>
      </form>
    </div>
    <div class="modal-footer">
    </div>
  </div>
